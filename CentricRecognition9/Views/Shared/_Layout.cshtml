<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top" style="background-color: #362d66;">
        <div class="container";>
            <div class="navbar-header";>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" style="background-color: #362d66; border: 1px solid white;">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home")"><img src="~/Content/Images/logo.jpg" alt="Centric"></a>
            </div>
            <div class="navbar-collapse collapse" ;>
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Core Values", "Index", "CoreValues")</li>
                    <li>@Html.ActionLink("Employees", "Index", "Employees")</li>
                    <li>@Html.ActionLink("Recognition", "Index", "Recognitions")</li>
                    @*<li>@Html.ActionLink("Recognition Store", "WIP", "Home")</li>*@
                    @*<li>@Html.ActionLink("Milestones", "WIP", "Home")</li>*@
                    @*<li>@Html.ActionLink("Leaderboard", "WIP", "Home")</li>*@
                    @*<li>@Html.ActionLink("History", "WIP", "Home")</li>*@
                    <li>@Html.ActionLink("FAQ", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    <div class="navbar navbar-inverse navbar-fixed-bottom" style="background-color: #362d66; font-family: Helvetica;font-size: 12px; color: #fff" ;>
        <br /><br>
        <footer>
            <p>&copy; @DateTime.Now.Year - Centric Consulting</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
